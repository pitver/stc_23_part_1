
CREATE TABLE public.product (
                id INTEGER NOT NULL,
                product_name VARCHAR NOT NULL,
                price DOUBLE PRECISION NOT NULL,
                present BOOLEAN NOT NULL,
                CONSTRAINT product_pk PRIMARY KEY (id)
);


CREATE TABLE public.client (
                id INTEGER NOT NULL,
                FIO VARCHAR NOT NULL,
                phoneNumber INTEGER NOT NULL,
                CONSTRAINT client_pk PRIMARY KEY (id)
);


CREATE TABLE public.order_1 (
                id_1 INTEGER NOT NULL,
                clientId INTEGER NOT NULL,
                productId INTEGER NOT NULL,
                dateCreateOrder DATE NOT NULL,
                CONSTRAINT order_1_pk PRIMARY KEY (id_1)
);


CREATE TABLE public.shop (
                id INTEGER NOT NULL,
                numberOrder INTEGER NOT NULL,
                CONSTRAINT shop_pk PRIMARY KEY (id)
);


ALTER TABLE public.order_1 ADD CONSTRAINT order_product_fk
FOREIGN KEY (id_1)
REFERENCES public.product (id)
ON DELETE NO ACTION
ON UPDATE NO ACTION
NOT DEFERRABLE;

ALTER TABLE public.order_1 ADD CONSTRAINT client_order_fk
FOREIGN KEY (id_1)
REFERENCES public.client (id)
ON DELETE NO ACTION
ON UPDATE NO ACTION
NOT DEFERRABLE;

ALTER TABLE public.shop ADD CONSTRAINT shop_order_fk
FOREIGN KEY (id)
REFERENCES public.order_1 (id_1)
ON DELETE NO ACTION
ON UPDATE NO ACTION
NOT DEFERRABLE;
